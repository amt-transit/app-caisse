rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Fonction utilitaire pour vérifier l'authentification
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Fonction pour vérifier le rôle de l'utilisateur
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Fonction pour vérifier si l'utilisateur est admin ou super admin
    function isAdmin() {
      return isAuthenticated() && (getUserRole() in ['admin', 'super_admin']);
    }
    
    // Fonction pour vérifier si l'utilisateur est super admin uniquement
    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'super_admin';
    }

    // --- RÈGLES PAR COLLECTION ---

    // Users : Seul le super admin peut modifier, les utilisateurs peuvent lire leur propre profil
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isSuperAdmin(); // Seul le super admin peut créer/modifier/supprimer des users
    }
    
    // Transactions : Les utilisateurs authentifiés peuvent lire/écrire
    match /transactions/{document} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // On verrouillera plus tard si besoin
    }
    
    // Expenses : Idem
    match /expenses/{document} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Livraisons : Idem
    match /livraisons/{document} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Audit Logs : Lecture pour les admins, écriture pour tous (pour créer les logs)
    match /audit_logs/{document} {
      allow read: if isAdmin();
      allow write: if isAuthenticated();
    }
    
    // Bank Movements : Authentifié
    match /bank_movements/{document} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Autres collections : Appliquer le même principe
    match /{document=**} {
      allow read, write: if isAuthenticated(); // Par défaut, tous les utilisateurs connectés peuvent tout lire/écrire
      // À ajuster selon vos besoins
    }
  }
}